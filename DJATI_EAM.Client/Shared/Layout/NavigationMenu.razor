<MudDrawer Breakpoint="Breakpoint.Md"
           Elevation="1"
           Open="DrawerOpen"
           OpenChanged="@(e => DrawerOpenChanged.InvokeAsync(e))"
           Variant="DrawerVariant.Responsive">

    <MudDrawerHeader Class="align-center d-flex pa-0">
        <MudIcon Class="ml-6 mr-2"
                 Color="@Color.Primary"
                 Icon="@Icons.Custom.Brands.MudBlazor"
                 Size="Size.Large" />

        <MudText Typo="Typo.body1" Color="Color.Primary"><b>DJATI Mining Management System</b></MudText>
    </MudDrawerHeader>

    <MudNavMenu Rounded="true" Class="truncate">
        <MudNavLink Href="/">Home</MudNavLink>
        <MudNavGroup Title="Asset Management" Expanded="true">
            <MudNavLink Href="/asset/asset-list-generic">Asset List Generic</MudNavLink>
            <MudNavLink Href="/asset/asset-list">Asset List</MudNavLink>
            <MudNavLink Href="/asset/asset-list-detail">Asset List Detail</MudNavLink>
        </MudNavGroup>
        <MudNavGroup Title="Fleet Management System" Expanded="false">
            <MudNavLink Href="#">Truck Tracking</MudNavLink>
            <MudNavLink Href="#">Dump Truck Tracking</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Suply Chain Management" Expanded="false">
            <MudNavLink Href="#">Truck Tracking</MudNavLink>
            <MudNavLink Href="#">Dump Truck Tracking</MudNavLink>
        </MudNavGroup>

        <MudNavGroup Title="Hris Management" Expanded="false">
            <MudNavLink Href="#">Truck Tracking</MudNavLink>
            <MudNavLink Href="#">Dump Truck Tracking</MudNavLink>
        </MudNavGroup>

        <MudDivider DividerType="DividerType.Middle" Class="my-4" />

        <MudNavLink Href="#">Statistic</MudNavLink>
        <MudNavLink Href="#">Reports</MudNavLink>
        <MudNavLink Href="#">Expense</MudNavLink>
    </MudNavMenu>
</MudDrawer>


@code {
    [EditorRequired][Parameter] public EventCallback<bool> DrawerOpenChanged { get; set; }

    [EditorRequired][Parameter] public bool DrawerOpen { get; set; }
}