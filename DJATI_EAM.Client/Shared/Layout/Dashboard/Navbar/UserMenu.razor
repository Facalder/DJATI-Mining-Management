<MudTooltip Arrow="true" Text="User Profile">
    <MudMenu AnchorOrigin="Origin.BottomRight" Class="mx-1" LockScroll="true" TransformOrigin="Origin.TopRight" Color="@Color.Inherit">
        <ActivatorContent>
            <MudAvatar Color="Color.Primary" Variant="Variant.Filled">M</MudAvatar>
        </ActivatorContent>
        <ChildContent>
            <div class="pb-4" style="min-width: 260px; margin-bottom:0px!important">
                <MudStack Row="true" Class="ma-4">
                    <MudAvatar Color="Color.Primary" Variant="Variant.Outlined">M</MudAvatar>
                    <MudStack Justify="Justify.SpaceBetween" Spacing="0">
                        <MudText Typo="Typo.body1">Fa Ainama d Caldera</MudText>
                        <MudText Typo="Typo.body2">jhondhoe@gmail.com</MudText>
                    </MudStack>
                </MudStack>

                <MudDivider Class="my-2" />
                <MudMenuItem Href="/user/profile">
                    <div class="d-flex">
                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Person" />
                        <MudText>Profile</MudText>
                    </div>
                </MudMenuItem>
                <MudMenuItem OnAction="OnSettingClick">
                    <div class="d-flex">
                        <MudIcon Class="mx-2" Icon="@Icons.Material.Filled.Settings" />
                        <MudText>Settings</MudText>
                    </div>
                </MudMenuItem>
                <div class="mt-4 mx-4">
                    <MudButton Color="Color.Default" FullWidth="true" StartIcon="@Icons.Material.Filled.Logout" Variant="Variant.Outlined">
                        "Log Out
                    </MudButton>
                </div>
            </div>
        </ChildContent>
    </MudMenu>
</MudTooltip>

@code {
    [Parameter] public EventCallback<EventArgs> OnSettingClick { get; set; }
}